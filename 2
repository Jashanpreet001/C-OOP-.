#include <iostream>
#include <string>
using namespace std;

class human_beings{
public:
    string name;
    
    void introduce(){
        cout<<"Hi, I am "<< name;
        }
};

int main(){
    
    human_beings jashan;
    jashan.name = "Jashan\n";
    jashan.introduce();
    
    human_beings jessica;
    jessica.name="Jessica\n";
    jessica.introduce();
    
    
    
    return 0;
    
}
