#include <iostream>
using namespace std;

class human_beings{
public:
    string name;
    
    void introduce(){
        
        cout<<"Hi "<< name<<endl;
    }
};

int main(){
    
    human_beings jashan;
    human_beings *jessica = new human_beings();
    
    jashan.name="Jashan";
    jashan.introduce();
    
    jessica->name="Jessica";
    jessica->introduce();
    
    return 0;
    
}
