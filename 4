#include <iostream>
using namespace std;

class human_beings{
public:
    string name;
    
    void introduce();
};

void human_beings::introduce(){
     
     cout<<"Hi "<< name<<endl;
}
// Note that only the static properties of the class any be initilize from outside.
int main(){
    
    human_beings jashan;
    human_beings *jessica = new human_beings();
    
    jashan.name="Jashan";
    jashan.introduce();
    
    jessica->name="Jessica";
    jessica->introduce();
    
    return 0;
    
}
